<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SearchActivity">

    <Button
            android:text="@string/searchLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/search"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:onClick="searchBarriers"/>
    <Button
            android:text="10 m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/radius2"
            app:layout_constraintTop_toTopOf="@+id/radius1" app:layout_constraintStart_toEndOf="@+id/radius1"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/radius3"
            android:onClick="switchRadius"/>
    <Button
            android:text="5 m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/radius1"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/radius2" app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginTop="16dp" android:onClick="switchRadius"/>
    <Button
            android:text="30 m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/radius3"
            app:layout_constraintTop_toTopOf="@+id/radius2" app:layout_constraintStart_toEndOf="@+id/radius2"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:onClick="switchRadius"/>
    <TextView
            android:text="@string/radiusLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="@string/locationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintTop_toBottomOf="@+id/radius1"
            android:layout_marginTop="24dp"/>
    <Button
            android:text="@string/geoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            app:layout_constraintStart_toStartOf="@+id/radius1" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:onClick="switchLocation"/>
    <Button
            android:text="@string/mapLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            app:layout_constraintTop_toTopOf="@+id/button" app:layout_constraintStart_toStartOf="@+id/radius2"
            android:onClick="switchLocation"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/search_progressbar"
            app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toTopOf="@+id/search"/>
</androidx.constraintlayout.widget.ConstraintLayout>